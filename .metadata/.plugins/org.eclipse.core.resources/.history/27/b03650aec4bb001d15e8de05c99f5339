#ifndef LED_H_
#define LED_H_

/** -------------------------------------------------------------- **/
/**----------------------- Address Definition -------------------- **/
/** -------------------------------------------------------------- **/
#define RCC_BASE_ADDR 0x40023800U
#define AHB1_
#define GPIO_D_MODER ((uint32_t*) 0x40020C00)


/** -------------------------------------------------------------- **/
/**------------------- Struct Definition ----------------- **/
/** -------------------------------------------------------------- **/
// GPIO Mode Registers
typedef struct{
	uint32_t port_0 : 2;
	uint32_t port_1 : 2;
	uint32_t port_2 : 2;
	uint32_t port_3 : 2;
	uint32_t port_4 : 2;
	uint32_t port_5 : 2;
	uint32_t port_6 : 2;
	uint32_t port_7 : 2;
	uint32_t port_8 : 2;
	uint32_t port_9 : 2;
	uint32_t port_10 : 2;
	uint32_t port_11 : 2;
	uint32_t port_12 : 2;
	uint32_t port_13 : 2;
	uint32_t port_14 : 2;
	uint32_t port_15 : 2;
}GPIOx_MODER;



#endif /* LED_H_ */
